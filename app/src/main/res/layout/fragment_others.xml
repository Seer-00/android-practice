<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_user"
            android:layout_width="90dp"
            android:layout_height="90dp"
            fresco:roundAsCircle="true"
            fresco:roundingBorderWidth="3dp"
            fresco:roundingBorderColor="@color/colorBase" />

        <TextView
            android:id="@+id/tv_user"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="22sp"
            android:text="USERNAME"/>

        <ImageButton
            android:id="@+id/img_qrcode"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/qrcode"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_to_scan_contact"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/scan_0"/>

        <EditText
            android:id="@+id/edit_add_contact"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/default_edittext"
            android:textSize="16sp"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:singleLine="true"
            android:hint="输入联系人名称"/>

        <Button
            android:id="@+id/btn_rm_contact"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginEnd="6sp"
            android:text="删除"
            android:textSize="16sp"
            android:textColor="#fff"
            android:background="@drawable/delete_button" />

        <Button
            android:id="@+id/btn_add_contact"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="添加"
            android:textSize="16sp"
            android:textColor="#fff"
            android:background="@drawable/default_button" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_to_scan_isbn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/scan_1"/>

        <EditText
            android:id="@+id/edit_isbn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/default_edittext"
            android:textSize="16sp"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:singleLine="true"
            android:hint="输入图书的ISBN"/>

        <Button
            android:id="@+id/btn_search_book"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:textColor="#fff"
            android:text="搜索"
            android:background="@drawable/default_button" />

    </LinearLayout>

</LinearLayout>